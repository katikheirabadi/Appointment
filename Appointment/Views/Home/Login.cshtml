@using Appointment.DTOs;
@{
    Layout = "_Layout";
    ViewData["Title"] = "ورود";
}
@model LoginInputDto
<div class="row bg-color1" style="height:100vh !important">

    <div class="d-none d-md-block col-md-3"></div>
    <div class="col-sm-12 col-md-9 bg-white d-flex align-content-center justify-content-center">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "align-content-center justify-content-center" }))
        {
            <div class="d-flex justify-content-center align-items-center">
                <img src="~/img/logo.jpg" />
            </div>
            <div class="form-group my-4">
                <label for="userName" class="pb-3 sitecolor">@Html.DisplayName("UserName")</label>
                @Html.TextBoxFor(x=> x.UserName, new { @class = "form-control w-large rounded rounded-pill"})
                @Html.ValidationMessageFor(m => m.UserName,"", new { @class = "text-danger" })
            </div>
            <div class="form-group my-2">
                <label for="password" class="pb-3 ">@Html.DisplayName("Password")</label>
                @Html.TextBoxFor(x=> x.Password, new { @class = "form-control w-large rounded rounded-pill",@type="password"})
                @Html.ValidationMessageFor(m => m.Password,"", new { @class = "text-danger" })

            </div>
            <button type="submit" class="btn bg-color2 w-100 rounded rounded-pill mt-4 py-2">ورود به حساب کاربری</button>

        }
    </div>
</div>